        .bold-text {
            font-weight: bold;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            text-align: center;
        }

        tbody tr:nth-child(odd) {
            background-color: #ffffff; /* Light gray for odd rows */
        }

        tbody tr:nth-child(even) {
            background-color: #e9e9e9; /* White for even rows */
